<!--
  @author Salesforce.org
  @date 2018
  @description Dynamic component used in a modal to send button events to a parent body.
-->
<aura:component>

    <!--Public Attributes-->
    <aura:attribute name="currentStep" default="0" type="String" description="Step in progress indicator. Note: is a STRING." />
    <aura:attribute name="hasError" default="false" type="Boolean"
                    description="Indicates if there is an error in the current step" />
    <aura:attribute name="pendingSave" default="false" type="Boolean"
                    description="Controls whether Save is disabled because modal body has uncommitted changes" />
    <aura:attribute name="progressStepLabels" default="{}" type="Map"
                    description="Map of labels and values to use for progress steps" />

    <!--Events-->
    <aura:handler event="ltng:sendMessage" action="{!c.handleMessage}"/>
    <lightning:overlayLibrary aura:id="overlayLib"/>

    <!--Start Markup-->
    <lightning:layout horizontalAlign="spread" multipleRows="true">
        <lightning:layoutItem size="3" class="slds-text-align_left">
            <!--Uses 0 based index for steps-->
            <aura:if isTrue="{! v.currentStep != '0' }">
                <lightning:button variant="neutral" label="{!$Label.c.stgBtnBack}" onclick="{!c.back}" />
            </aura:if>
        </lightning:layoutItem>

        <!-- Start: Progress Indicator -->
        <lightning:layoutItem size="6" class="slds-grid_vertical-align-center">
            <lightning:progressIndicator currentStep="{!v.currentStep}" type="base" hasError="{!v.hasError}"
                                         variant="base" class="slds-text-align_center">
                <aura:iteration items="{!v.progressStepLabels}" var="step" indexVar="index">
                    <!--Concat forces index to string, and only strings are supported for progressStep-->
                    <lightning:progressStep label="{!step}" value="{!concat(index, '')}"/>
                </aura:iteration>
            </lightning:progressIndicator>
        </lightning:layoutItem>
        <!-- End: Progress Indicator -->

        <lightning:layoutItem size="3" class="slds-text-align_right">
            <lightning:button variant="neutral" label="{!$Label.c.stgBtnCancel}" onclick="{!c.cancel}" />
            <!--Uses 0 based index for steps, which are strings-->
            <aura:if isTrue="{!v.currentStep != concat(sub(v.progressStepLabels.length,1),'')}">
                <lightning:button variant="brand" label="{!$Label.c.labelListViewNext}" onclick="{!c.next}" />
            </aura:if>
            <aura:if isTrue="{!v.currentStep == concat(sub(v.progressStepLabels.length,1),'')}">
                <lightning:button variant="brand" label="{!$Label.c.stgBtnSave}" onclick="{!c.save}" disabled="{!v.pendingSave}"/>
            </aura:if>
        </lightning:layoutItem>
    </lightning:layout>
    <!--End Markup-->

</aura:component>